@using SpedIT.Models;
@model IEnumerable<SpedIT_Domain.Models.Complain>

@{
    ViewData["Title"] = "Index";
}
@functions
{
    public string GetEmployeeDisplayValue(Employee? employee)
    {
        if(employee == null)
        {
            return "Not Specified";
        }
        return employee.FirstName + " " + employee.LastName;
    }
}
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Complainant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contested)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{
                        var displayValue = GetEmployeeDisplayValue(item.Complainant);
                    }
                    @Html.DisplayFor(modelItem => displayValue)
                </td>
                <td>
                    @{
                        displayValue = GetEmployeeDisplayValue(item.Contested);
                    }
                    @Html.DisplayFor(modelItem => displayValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
