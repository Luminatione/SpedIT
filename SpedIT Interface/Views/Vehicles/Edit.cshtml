                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="XDimensions" class="control-label"></label>
                <input asp-for="XDimensions" class="form-control" />
                <span asp-validation-for="XDimensions" class="text-danger"></span>
            </div>
