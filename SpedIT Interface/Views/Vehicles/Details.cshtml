@model SpedIT_Domain.Models.Vehicle

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Vehicle</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RegistrationNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegistrationNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.XDimensions)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.XDimensions)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.YDimensions)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.YDimensions)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ZDimensions)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ZDimensions)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Height)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Height)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaxWeight)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaxWeight)
        </dd>
        <dd>
            @if (Model.Packages != null && Model.Packages.Any())
            {
                <table>
                    <thead>
                        <tr>
                            <th>Package ID</th>
                            <th>State</th>
                            <th>Address</th>
                            <th>Comment</th>
                            <th>Sending Time</th>
                            <th>Planned Delivery Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var package in Model.Packages)
                        {
                            <tr>
                                <td>@package.Id</td>
                                <td>@package.State</td>
                                <td>@package.Address</td>
                                <td>@package.Comment</td>
                                <td>@package.SendingTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>@package.PlannedDeliveryTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No packages available for this vehicle.</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
